<EditForm Model=@Dto OnValidSubmit=@OnValidSubmit>
    <DataAnnotationsValidator />
    <div class="form-group">
        <label>Username:</label>
        <div>
            <InputText @bind-Value="@Dto.Username" />
            <ValidationMessage For="@(() => Dto.Username)" />
        </div>
    </div>
    <div class="form-group ">
        <div>
            <label>Password:</label>
            <div>
                <InputText @bind-Value="@Dto.Password" />
                <ValidationMessage For="@(() => Dto.Password)" />
            </div>
        </div>
    </div>
    <button type="submit" class="btn btn-success">
        @ButtonText
    </button>
</EditForm>

@code {

    [Parameter] public LoginDto Dto { get; set; }
    [Parameter] public string ButtonText { get; set; } = "Login";
    [Parameter] public EventCallback OnValidSubmit { get; set; }
}
